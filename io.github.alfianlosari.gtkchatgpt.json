{
    "app-id": "io.github.alfianlosari.gtkchatgpt",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.swift6"
    ],
    "command": "GTKChatGPT",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/swift6/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/swift6/lib"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "GTKChatGPT",
            "builddir": true,
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "build-commands": [
                "swift build -c debug --static-swift-stdlib",
                "install -Dm755 .build/debug/GTKChatGPT /app/bin/GTKChatGPT",
                "install -Dm644 data/io.github.alfianlosari.gtkchatgpt.metainfo.xml $DESTDIR/app/share/metainfo/io.github.alfianlosari.gtkchatgpt.metainfo.xml",
                "install -Dm644 data/io.github.alfianlosari.gtkchatgpt.desktop $DESTDIR/app/share/applications/io.github.alfianlosari.gtkchatgpt.desktop",
                "install -Dm644 data/icons/io.github.alfianlosari.gtkchatgpt.svg $DESTDIR/app/share/icons/hicolor/scalable/apps/io.github.alfianlosari.gtkchatgpt.svg",
                "install -Dm644 data/icons/io.github.alfianlosari.gtkchatgpt-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt-symbolic.svg",
                "install -Dm644 data/icons/set-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.set-symbolic.svg",
                "install -Dm644 data/icons/settings-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.settings-symbolic.svg",
                "install -Dm644 data/icons/mistake-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.mistake-symbolic.svg",
                "install -Dm644 data/icons/tag-outline-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.tag-outline-symbolic.svg",
                "install -Dm644 data/icons/share-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.share-symbolic.svg",
                "install -Dm644 data/icons/import-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/io.github.alfianlosari.gtkchatgpt.import-symbolic.svg"
            ]
        }
    ]
}